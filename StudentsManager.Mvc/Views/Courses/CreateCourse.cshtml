@model CreateCourseViewModel

@{
    ViewBag.Title = "Create Course";
    Layout = "_Layout";
}

<div>
    <h2>Create New Course</h2>
    <a asp-action="Index">Return to Courses</a>
    <div>
        <form method="POST" asp-action="CreateCourse">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row checkbox-list">
                @foreach (KeyValuePair<Guid, string> student in Model.Students)
                {
                    <label>
                        <input type="checkbox" name="SelectedStudentsIds" value="@student.Key" />
                        @student.Value
                    </label>
                }
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>
</div>
